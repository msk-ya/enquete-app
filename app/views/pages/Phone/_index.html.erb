
   <% enquetes.each do |enquete| %>
     <table>
         <tr>
           <th> <%= image_tag("/svg/enquete.svg",size:"25x25",style:"color:white")%>タイトル</th>
           <td>
             <%= link_to enquete.title, result_path(enquete.id) %><br>
              <span>受付中</span>
           </td>
         </tr>

          <tr>
            <th><%= image_tag("/write.svg",size:"25x25",style:"color:white")%>&thinsp;&thinsp;投稿日</th>
            <td><%= l enquete.created_at, format: :day %></td>
         </tr>

          <tr>
            <th> <%= image_tag("/svg/cal.svg",size:"25x25",style:"color:white")%>&thinsp;&thinsp;期限</th>
            <td><%= l enquete.limit, format: :default %></td>
         </tr>

         <tr>
           <td colspan="2">
              <%= enquete.answer_button_existence %>
           </td>
         </tr>

     </table>
   <% end %>
  