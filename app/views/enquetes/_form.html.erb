<div class="new-enquete-area">
  <% if @enquete.errors.present? %>
    <% @enquete.errors.full_messages.each do |err| %>
      <div class="alert alert-danger"><%= err %></div>
    <% end %>
  <% end %>

  <%= form_with model: @enquete, local: true do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="form-parts">
      <label><%= icon("fab", "tumblr") %>タイトル</label>
      <%= f.text_field :title, placeholder: "アンケートのタイトルを入力ください。" %>
    </div>

    <div class="form-parts">
      <label><%= icon("far", "calendar-alt") %>期限</label>
      <%= f.text_field :limit, readonly:true, id:"dp1" %>
  　</div>

      <div class="form-group mb-3">
      <label><%= icon("fas", "pen") %>概要</label>
      <%= f.text_area :content, rows:5, placeholder: "アンケートの概要を入力ください。" %>
      </div>

      <div class="form-parts">
      <label><%= image_tag('/svg/area-new.svg',size:"15x15") %>地域</label>
      <%= f.select :area, area_list %>
      </div>

      <div>
        <%= f.submit "追加" %>
      </div>
  <% end %>
</div>
