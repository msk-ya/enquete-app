<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 shadow">
     <h1 class="text-center">アンケート</h1>
     <%= form_with url:answer_path, local: true do |f| %>
      <h3 class="bg-primary p-3 text-center text-white"><%= @enquete.title %></h3>
      <p class="text-center"><%= @enquete.content %></p>
      <% @question.each do |q| %>
         <h5 class="bg-success p-1 text-center text-white"><%= q.content %></h5>
         <% q.forms.all.each do |f| %>
           <%= f.html.html_safe %>
         <% end %>
      <% end %>
      <br>
      <%= f.submit "送信", class:"btn btn-primary w-100" %>
     <% end %>
    </div>
  </div>
</div> 