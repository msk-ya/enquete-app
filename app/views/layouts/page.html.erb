<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul class="header-left">
          <li>
           <%= link_to root_path do  %>
             <%= image_tag('/svg/home.svg', size:"25x25", style:"vertical-align:bottom") %> HOME
           <% end%>
          </li>
          <li>
          　<%= link_to pages_path do  %>
              <%= image_tag('/svg/question_header.svg', size:"25x25", style:"vertical-align:bottom;color:white") %> アンケート一覧
            <% end %>
          </li>
          
          <!-- ログイン専用 -->

          <% if user_signed_in? %>
           <li>
             <%= link_to "アンケート管理", enquetes_user_index_path(current_user)  %>
           </li>
          <% end %>

        </ul>
        <ul class="header-right">
          <% if user_signed_in? %>
             <li>
               <span><%= image_tag("/user.svg",size:"15x15",style:"background:#fff") %><%= current_user.name %></span>&emsp;
               <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
             <li><%= link_to "ログイン", new_user_session_path %></li>
          <% end %>
        </ul>
        
      </nav>
      <img src="/custom.jpg" alt="header-img" class="header-img">
    </header>
    
    <main class="page-main">
       <article class="page-article">
          <%= yield %>
       </article>

       <aside class="page-aside">
          <%= render "/pages/side" %>
       </aside>
    </main>
  </body>
</html>
