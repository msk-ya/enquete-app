<%= form_with model: @form, local: true do |f| %>
  <%= f.hidden_field :id, value: @question.id %>
  <p class="info-p">補足説明を入力してください。</p>
<div>
  <%= f.text_field :content, placeholder:"(*任意です。)", class:"select-text" %>
  <div>
  　<p>最低2つは登録してください。</p>
    <button type="button" id="add-select" class="btn btn-primary mt-2 rounded-circle mr-1">+</button>
    <button type="button" id="delete-select" class="btn btn-danger mt-2 rounded-circle">-</button>
  </div>
  <div id="select-area">
    <% @count.times do |i|%>
      <label><%= "選択項目#{i + 1}" %></label>
      <%= f.text_field "check[][content]" %>
    <% end %>
   </div>
</div>
<%= f.submit "登録" %>
<% end %>
<button id="back-admin-list" onclick="backAdminLists(<%= current_user.id %>, <%= question.id %>)">戻る</button>
